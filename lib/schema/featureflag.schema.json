{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "features": {
      "type": "object",
      "properties": {
        "cluster": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/cluster" }
        }
      },
      "required": ["cluster"]
    }
  },
  "required": ["features"],
  "$defs": {
    "node": {
      "type": "object",
      "properties": {
        "label": { "type": "string" }
      },
      "required": ["label"]
    },
    "boolean_node": {
      "allOf": [
        { "$ref": "#/$defs/node" },
        {
          "type": "object",
          "properties": {
            "value": { "type": "boolean" },
            "default": { "type": "boolean" }
          },
          "required": ["value", "default"]
        }
      ]
    },
    "string_node": {
      "allOf": [
        { "$ref": "#/$defs/node" },
        {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "default": { "type": "string" }
          },
          "required": ["value", "default"]
        }
      ]
    },
    "percentage_node": {
      "allOf": [
        { "$ref": "#/$defs/node" },
        {
          "type": "object",
          "properties": {
            "value": { "type": "integer", "minimum": 0, "maximum": 100 },
            "default": { "type": "integer", "minimum": 0, "maximum": 100 }
          },
          "required": ["value", "default"]
        }
      ]
    },
    "options": {
      "type": "object",
      "properties": {
        "option": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string" }
        }
      },
      "required": ["option"]
    },
    "choice_node": {
      "allOf": [
        { "$ref": "#/$defs/node" },
        {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "default": { "type": "string" },
            "options": { "$ref": "#/$defs/options" }
          },
          "required": ["value", "default", "options"]
        }
      ]
    },
    "cluster": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "cluster": {
          "type": "array",
          "items": { "$ref": "#/$defs/cluster" }
        },
        "boolean_node": {
          "type": "array",
          "items": { "$ref": "#/$defs/boolean_node" }
        },
        "percentage_node": {
          "type": "array",
          "items": { "$ref": "#/$defs/percentage_node" }
        },
        "string_node": {
          "type": "array",
          "items": { "$ref": "#/$defs/string_node" }
        },
        "choice_node": {
          "type": "array",
          "items": { "$ref": "#/$defs/choice_node" }
        }
      },
      "required": ["label"],
      "additionalProperties": false
    }
  }
}
